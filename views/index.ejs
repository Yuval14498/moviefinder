<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Itim&display=swap" rel="stylesheet">
</head>

<body>
    <%- include('partials/navbar'); -%>
        <%- include('partials/flash'); -%>
            <div class="container-fluid">
                <h1>
                    <%= title %> Movies
                </h1>
                <form action="/movies" method="GET">
                    <div class="row g-0">
                        <div class="col-3" style="margin-left: 24px;">
                            <select id="sort" name="find" class="form-select form-control" aria-label="Category select">
                                <option <%=find==='popular' ? 'selected' : '' %> value="popular">Popular</option>
                                <option <%=find==='top_rated' ? 'selected' : '' %> value="top_rated">Top Rated</option>
                                <option <%=find==='upcoming' ? 'selected' : '' %> value="upcoming">Upcoming</option>
                            </select>
                        </div>
                        <div class="col-1">
                            <button class="btn btn-secondary">Find</button>
                        </div>

                    </div>
                </form>
                <div class="row">
                    <% for(let movie of movies.data.results) { %>
                        <div class="col-3">
                            <a href="/movies/<%=movie.id%>" style="text-decoration: none; color: black;">
                                <% if(movie.poster_path && movie.poster_path.length ){ %>
                                    <div class="cuscard">
                                        <img src="http://image.tmdb.org/t/p/w500<%=movie.poster_path%>" alt="">
                                        <div class="postertext">
                                            <div class="title">
                                                <%=movie.original_title%>
                                            </div>
                                            <% if(movie.vote_average !==0 ) { %>
                                                <div class="score m-0 mt-1">
                                                    <%=movie.vote_average%>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                    <% } else {%>
                                        <div class="cuscard d-flex align-items-center justify-content-center">
                                            <%=movie.original_title%>
                                        </div>
                                        <% } %>
                            </a>
                        </div>
                        <% } %>
                </div>
                <nav class="pagination-outer" aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="page-item <%=page <= 1 ? 'disabled' : ''%> ">
                            <a href="<%=baseUrl%>page=<%=parseInt(page) - 1%>" class="page-link" aria-label="Previous">
                                <span aria-hidden="true">«</span>
                            </a>
                        </li>
                        <% for(let i=1; i<6; i++) {%>
                            <li class="page-item  <%=parseInt(page) === i ? " active" : "" %>"><a class="page-link"
                                    href="<%=baseUrl%>page=<%=i%>">
                                    <%=i%>
                                </a></li>
                            <% } %>

                                <li class="page-item">
                                    <a href="<%=baseUrl%>page=<%=parseInt(page) + 1%>" class="page-link"
                                        aria-label="Next">
                                        <span aria-hidden="true">»</span>
                                    </a>
                                </li>
                    </ul>
                </nav>
            </div>
            <%- include('partials/footer'); -%>